<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DeviceListFragment">

    <fragment
        android:id="@+id/DeviceListFragment"
        android:name="com.piee.sticky_pi_data_harvester.DeviceListFragment"
        android:label="Devices"
        tools:layout="@layout/fragment_device_list" >

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/ImagesFragment" />

        <action
            android:id="@+id/action_DeviceFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/ImagesFragment"
        android:name="com.piee.sticky_pi_data_harvester.FileFragment"
        android:label="Images"
        tools:layout="@layout/fragment_image_files" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/DeviceListFragment" />
        <action
            android:id="@+id/action_DeviceFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/PreferenceFragment"
        android:name="com.piee.sticky_pi_data_harvester.PreferenceFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_preference" >

    </fragment>

    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.piee.sticky_pi_data_harvester.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail" >



    </fragment>


</navigation>